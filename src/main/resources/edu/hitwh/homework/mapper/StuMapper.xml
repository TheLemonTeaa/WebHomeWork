<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "edu.hitwh.homework.mapper.StuMapper">
    <select id="list" resultType="edu.hitwh.homework.pojo.Stu">
        select * from student
        <where>
            <if test="studentName != null and studentName != ''">
                studentName like concat('%', #{studentName},'%')
            </if>
            <if test="studentID != null and studentID != ''">
                and studentID like concat('%', #{studentID}, '%')
            </if>
            <if test="degree != null and degree != ''">
                and degree=#{degree}
            </if>
            <if test="className != null and className != ''">
                and className=#{className}
            </if>
        </where>
        order by update_time desc
    </select>
    <delete id="delete">
        delete from student where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
    <insert id="save">
        insert into student (studentName, studentID, gender, phoneNum, degree, className, count, score, update_time) VALUES
                            (#{studentName}, #{studentID}, #{gender}, #{phoneNum}, #{degree}, #{className}, #{count}, #{score}, #{update_time})
    </insert>
    <select id="getById" resultType="edu.hitwh.homework.pojo.Stu">
        select * from student where id = #{id}
    </select>
    <update id="update">
        update student
        <set>
            <if test="studentName != null and studentName != ''">
                studentName = #{studentName},
            </if>
            <if test="studentID != null and studentID != ''">
                studentID = #{studentID},
            </if>
            <if test="gender != null and gender != ''">
                gender = #{gender},
            </if>
            <if test="phoneNum != null and phoneNum != ''">
                phoneNum = #{phoneNum},
            </if>
            <if test="degree != null and degree != ''">
                degree = #{degree},
            </if>
            <if test="className != null and className != ''">
                className = #{className},
            </if>
            <if test="count != null and count != ''">
                count = #{count},
            </if>
            <if test="score != null and score != ''">
                score = #{score},
            </if>
            <if test="update_time != null and update_time !=''">
                update_time = #{update_time}
            </if>
        </set>
        where id = #{id}
    </update>
    <select id="getAll" resultType="edu.hitwh.homework.pojo.Stu">
        select * from student where gender = #{gender}
    </select>
</mapper>